---
const pageTitle = "Portfolio - Nick Baker";
import PageHead from '../components/PageHead.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<div class="container">
            <PageHead />
        <main>
            <div class="card">
                <a href="/project/inrix-signals/">
                    <img src="assets/signals-tn.png" alt="INRIX Signals software">
                    <h2>INRIX Signals</h2>
                    <h3>Detailed look at traffic for intersections</h3>
                </a>
            </div>
            <div class="card">
                <a href="/project/inrix-groups/">
                    <img src="assets/groups-tn.png" alt="INRIX Groups">
                    <h2>INRIX Groups</h2>
                    <h3>Managing users and data sets</h3>
                </a>
            </div>
            <div class="card">
                <a href="/project/inrix-fintech/">
                    <img src="assets/fintech-tn.png" alt="INRIX Fintech software">
                    <h2>INRIX Fintech</h2>
                    <h3>Correlates traffic data with profit</h3>
                </a>
            </div>
            <div class="card">
                <a href="/project/smartsheet/">
                    <img src="assets/android-tn.png" alt="Smartsheet Android app">
                    <h2>Smartsheet</h2>
                    <h3>All things checkmark</h3>
                </a>
            </div>
            <div class="card">
                <a href="/project/microsoft/">
                    <img src="assets/ms-tn.png" alt="Visual Studio Onboarding">
                    <h2>Microsoft</h2>
                    <h3>UI/UX and content design for the big guys</h3>
                </a>
            </div>
            <div class="card">
                <a href="/project/graphic-design/">
                    <img src="assets/pixel-tn.png" alt="Various art and graphic design projects">
                    <h2>Design Stuff</h2>
                    <h3>A bunch of those other things I've done</h3>
                </a>
            </div>
        </main>
        <Footer />
        </div>
	</body>
</html>